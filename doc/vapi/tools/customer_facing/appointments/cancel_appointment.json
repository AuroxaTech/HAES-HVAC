{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cancel Appointment Tool",
  "description": "Cancel existing appointment",
  "tool_definition": {
    "type": "function",
    "function": {
      "name": "cancel_appointment",
      "description": "Cancel an existing appointment. Use this when customer wants to cancel their appointment.",
      "parameters": {
        "type": "object",
        "properties": {
          "customer_name": {
            "type": "string",
            "description": "Customer's full name (required)"
          },
          "phone": {
            "type": "string",
            "description": "Customer's phone number (required)"
          },
          "address": {
            "type": "string",
            "description": "Service address (for lookup)"
          },
          "appointment_id": {
            "type": "string",
            "description": "Specific appointment ID if known"
          },
          "cancellation_reason": {
            "type": "string",
            "description": "Reason for cancellation"
          }
        },
        "required": ["customer_name", "phone"]
      }
    },
    "async": false,
    "server": {
      "url": "https://haes-hvac.fly.dev/vapi/server"
    }
  }
}
