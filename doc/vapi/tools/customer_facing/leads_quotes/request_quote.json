{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Request Quote Tool",
  "description": "Request installation/equipment quote",
  "tool_definition": {
    "type": "function",
    "function": {
      "name": "request_quote",
      "description": "Request a quote for new HVAC system installation or equipment. Use this when customer asks about pricing for new systems, replacements, or installations.",
      "parameters": {
        "type": "object",
        "properties": {
          "customer_name": {
            "type": "string",
            "description": "Customer's full name (required)"
          },
          "phone": {
            "type": "string",
            "description": "Customer's phone number (required)"
          },
          "email": {
            "type": "string",
            "description": "Customer's email address"
          },
          "address": {
            "type": "string",
            "description": "Property address (required)"
          },
          "property_type": {
            "type": "string",
            "enum": ["residential", "commercial", "property_management"],
            "description": "Type of property (required)"
          },
          "square_footage": {
            "type": "integer",
            "description": "Square footage of property"
          },
          "system_age_years": {
            "type": "integer",
            "description": "Age of current system in years"
          },
          "budget_range": {
            "type": "string",
            "description": "Budget range (e.g., 'under $5000', '$5000-$10000')"
          },
          "timeline": {
            "type": "string",
            "description": "Preferred timeline for installation (required)"
          },
          "system_type": {
            "type": "string",
            "description": "HVAC system type"
          }
        },
        "required": ["customer_name", "phone", "address", "property_type", "timeline"]
      }
    },
    "async": false,
    "server": {
      "url": "https://haes-hvac.fly.dev/vapi/server"
    }
  }
}
