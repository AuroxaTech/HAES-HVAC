{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Check Appointment Status Tool",
  "description": "Check status of existing appointment",
  "tool_definition": {
    "type": "function",
    "function": {
      "name": "check_appointment_status",
      "description": "Check the status of an existing appointment. Use this when customer asks about their appointment details, technician, or ETA.",
      "parameters": {
        "type": "object",
        "properties": {
          "customer_name": {
            "type": "string",
            "description": "Customer's full name (required)"
          },
          "phone": {
            "type": "string",
            "description": "Customer's phone number (required)"
          },
          "address": {
            "type": "string",
            "description": "Service address (for lookup)"
          },
          "appointment_id": {
            "type": "string",
            "description": "Specific appointment ID if known"
          }
        },
        "required": ["customer_name", "phone"]
      }
    },
    "async": false,
    "server": {
      "url": "https://haes-hvac.fly.dev/vapi/server"
    }
  }
}
