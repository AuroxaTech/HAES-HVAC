{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Purchase Request Tool",
  "description": "Request parts/equipment purchase",
  "tool_definition": {
    "type": "function",
    "function": {
      "name": "purchase_request",
      "description": "Request purchase of parts or equipment. Use this when customer or technician needs to order parts.",
      "parameters": {
        "type": "object",
        "properties": {
          "customer_name": {
            "type": "string",
            "description": "Customer's full name (required)"
          },
          "phone": {
            "type": "string",
            "description": "Customer's phone number (required)"
          },
          "part_name": {
            "type": "string",
            "description": "Part name (required)"
          },
          "part_number": {
            "type": "string",
            "description": "Part number"
          },
          "quantity": {
            "type": "integer",
            "description": "Quantity needed (required)"
          },
          "urgency": {
            "type": "string",
            "enum": ["high", "medium", "low"],
            "description": "Urgency level"
          }
        },
        "required": ["customer_name", "phone", "part_name", "quantity"]
      }
    },
    "async": false,
    "server": {
      "url": "https://haes-hvac.fly.dev/vapi/server"
    }
  }
}
